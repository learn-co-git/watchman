<% %>
<!DOCTYPE html>
<html>
 <head>
   <link href="//netdna.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
   <script src="//netdna.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
   <script src="//code.jquery.com/jquery-3.5.1.min.js"></script>
   <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
   <title>3 Column, Right Menus</title>
   <style type="text/css">

     body{
       margin:0;
       padding:0;
       font-family: Sans-Serif;
       line-height: 1.5em;
     }

     #header {
       background: #0000A0;
       height: 150px;
     }

     #header h1 {
       margin: 0;
       padding-top: 15px;
       padding-bottom: 95px;
     }

     #mainwrapper {
       overflow: hidden;
     }

     #contentwrapper{
       float: left;
       width: 99%;
     }

     #content {
       margin-right: 305px; /* Width of '#rightmenu' and '#leftmenu' combined. */
       padding-bottom: 1001px;
       margin-bottom: -1000px;
     }

     #leftmenu {
       float: left;
       width: 275px;
       margin-left: -500px; /* Width of '#rightmenu' and '#leftmenu' combined. */
       padding-bottom: 1001px;
       margin-bottom: -1000px;
       background: #737CA1;
     }

     #rightmenu {
       float: left;
       width: 100px;
       margin-left: -210px;
       padding-bottom: 1001px;
       margin-bottom: -1000px;
       background: #646D7E;
     }

     #footer{
       clear: left;
       width: 100%;
       background: #646D7E;
       text-align: center;
       padding: 5px 0;
     }

     .innertube{
       margin: 15px; /* Padding for content */
       margin-top: 0;
     }


     p {
       color: #0C090A;
     }

     nav ul {
       list-style-type: none;
       margin: 0;
       padding: 0;
     }

     nav ul a {
       color: darkblue;
       text-decoration: none;
     }

   </style>
 </head>

 <body>
     <header id="header">
       <div class="innertube">
         <% @report = Report.find_by_id(params["id"]) %>
         <% @user = current_user %>
         <h1>Neighborhood Report <%= @user.reports.length %>:  for <%= @report.address %></h1>
       </div>
     </header>
   <div id="mainwrapper">

     <div id="contentwrapper">
       <div id="content">
         <div class="innertube">
           <h2>Incident Date: <%= @report.incident_date %></h2><br>
           <h4>This report is autogenerated on behalf of </h4> <h3><%= @report.first_name %> <%= @report.last_name %>. </h3><br>
           <h4> Crime Summary: </h4><br>
         <p><%= @report.summary %> </div>
       </div>
     </div>

     <nav id="rightmenu">
       <div class="innertube">
         <ul>
      <h4>
          <li> W</li>
           <li> A </li>
           <li>  T </li>
           <li> C </li>
           <li>  H </li>
           <li> M </li>
           <li>  A </li>
           <li> N </li>
         </h4>
         </ul>
       </div>
     </nav>

     <nav id="leftmenu">
       <div class="innertube">
         <h3>Suspects</h3>
         <% suspect_images = @report.suspect_data.split('##') %>
         <% suspect_images.each do |pic| %>
         <% if pic != "" %>
         <ul>
           <img src=<%= pic %> alt="suspect_images" style="width:145px;height:145px;">
         </ul>
         <% end %>
         <% end %>
         <h3>Suspect Vehicles</h3>
         <% suspect_vehicles = @report.vehicle_data.split('##') %>
         <% suspect_vehicles.each do |pic| %>
         <% if pic != "" %>
         <ul>
           <img src=<%= pic %> alt="suspect_vehicles" style="width:145px;height:145px;">
         </ul>
         <% end %>
         <% end %>
       </div>
     </nav>
   </div>
   <br>
   <br>
   <% all_comments = Comment.all.select {|comment| comment.report_id == @report.id} %>
   <div class="container">
    <div class="row">
        <div class="panel panel-default widget">
            <div class="panel-heading">
                <span class="glyphicon glyphicon-comment"></span>
                <h3 class="panel-title">
                    Report Comments</h3>

                <span class="label label-info">
                    <%= all_comments.length %> commments so far..</span>
            </div>

            <% all_comments.each do |comment| %>
            <div class="panel-body">
                <ul class="list-group">
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col-xs-2 col-md-1">
                                </div>
                            <div class="col-xs-10 col-md-11">
                                <div>

                                    <% user = User.find_by_id(comment.user_id) %>
                                    <h4><%= user.name %></h4>
                                    <div class="mic-info">

                                    </div>
                                </div>
                                <div class="comment-text">
                                    <%= comment.content %>
                                </div>
                            </div>
                        </div>
                    </li>
                    <% end %>
                </ul>
            </div>
        </div>
    </div>
</div>


 </body>
 <br>
 <br>
 <%  %>

</html>
