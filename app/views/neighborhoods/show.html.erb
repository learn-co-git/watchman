
<% %>
<!DOCTYPE html>
<html>
 <head>
   <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
   <title>3 Column, Right Menus</title>
   <style type="text/css">

     h4 {text-align: center;}
       div {text-align: center;}

     body{
       background-color:#1d1d1d !important;
       color #00060f;
       margin:0;
       padding:5px;
       font-family: Sans-Serif;
       line-height: 1.5em;
     }

     #header {

       background: #0000A0;
       height: 3px;
     }

     #header h1 {

       margin: 0;
       padding-top: 15px;
       padding-bottom: 75px;

     }

     #mainwrapper {
       overflow: hidden;
     }

     #contentwrapper{
       float: left;
       width: 99%;
       overflow: hidden;
     }

     #content {
       margin-right: 305px; /* Width of '#rightmenu' and '#leftmenu' combined. */
       width: 50%;
       padding-bottom: 10px;
       margin-bottom: 90px;
       overflow: hidden;
     }

     #leftmenu {
       float: left;
       width: 275px;
       margin-left: -500px; /* Width of '#rightmenu' and '#leftmenu' combined. */
       padding-bottom: 25px;
       margin-bottom: 100px;
       background: #737CA1;
       overflow: hidden;
     }

     #rightmenu {
       float: left;
       width: 100px;
       margin-left: -210px;
       padding-bottom: 91px;
       margin-bottom: 95px;
       background: #646D7E;
       overflow: hidden;
     }

     #footer{
       clear: left;
       width: 100%;
       background: #646D7E;
       text-align: center;
       padding: 5px;
       overflow: hidden;
     }

     .innertube{
       color #00060f;
       margin: 25px; /* Padding for content */
       margin-top: 5px;
       margin-bottom: 35px;
       overflow: hidden;
     }


     p {
       color: #00060f;
     }

     nav ul {
       list-style-type: none;
       margin: 0;
       padding: 0;
       overflow: hidden;
     }

     nav ul a {

       text-decoration: none;
       overflow: hidden;
     }

   </style>
 </head>
 <body>
     <header id="header">
       </header>
       <div>
         <% @hood = Neighborhood.find_by_id(params["id"]) %>
         




<div id="mainwrapper">
    <% @hood.reports.each_with_index do |report, i| %>
    <div class="innertube", style="color:DarkCyan;">
         <% user = User.find_by_id(report.user_id) %>
         <h1>Neighborhood Report <%= report.id %>:   <%= report.address %></h1>
       </div>

     </div>


     <div id="contentwrapper">
       <div id="content">
         <div class="innertube", style="color:DarkCyan;">
           <h2>Incident Date: <%= report.incident_date %></h2><br>
           <h5>This report is autogenerated on behalf of </h5> <h3 style="color:MediumBlue;"><%= report.first_name %> <%= report.last_name %>. </h3><br>
           <h5> Crime Summary: </h5><br>
         <p style="color:MediumBlue;"><%= report.summary %> </div>
       </div>
       <br>
     </div>

     <nav id="rightmenu">
       <div class="innertube">
         <ul>
      <h4 style="centered">
          <li> W</li>
          <hr style="height:3px;border-width:0;color:gray;background-color:gray">
           <li> A </li>
           <hr style="height:2px;border-width:0;color:gray;background-color:gray">
           <li>  T </li>
           <hr style="height:3px;border-width:0;color:gray;background-color:gray">
           <li> C </li>
           <hr style="height:2px;border-width:0;color:gray;background-color:gray">
           <li>  H </li>
           <hr style="height:3px;border-width:0;color:gray;background-color:gray">
           <li> M </li>
           <hr style="height:2px;border-width:0;color:gray;background-color:gray">
           <li>  A </li>
           <hr style="height:3px;border-width:0;color:gray;background-color:gray">
           <li> N </li>
         </h4>
         </ul>
       </div>
     </nav>

     <nav id="leftmenu">
       <div class="innertube">
         <h3>Suspects</h3>
         <hr style="height:4px;border-width:0;color:gray;background-color:gray">
         <% suspect_images = report.suspect_data.split('##') %>
         <% suspect_images.each do |pic| %>
         <% if pic != "" %>
         <ul>
           <img src=<%= pic %> alt="suspect_images" style="width:145px;height:145px;">
         </ul>
         <% end %>
         <% end %>
         <h3>Suspect Vehicles</h3>
         <hr style="height:5px;border-width:0;color:gray;background-color:gray">
         <% suspect_vehicles = report.vehicle_data.split('##') %>
         <% suspect_vehicles.each do |pic| %>
         <% if pic != "" %>
         <ul>
           <img src=<%= pic %> alt="suspect_vehicles" style="width:145px;height:145px;">
         </ul>
         <% end %>
         <% end %>
       </div>
     </nav>
   </div>

   <footer id="footer">
     <hr style="height:7px;border-width:0;color:gray;background-color:SlateBlue">
     <div class="innertube">
       <p>Neighborhood: <%= user.neighborhood_id %>....  Email: <%= user.email %>.... Telephone Number: <%= report.telephone_number %></p>
     </div>
     <hr style="height:7px;border-width:0;color:gray;background-color:SlateBlue">
   </footer>
   <br>
   <br>
   <div>
   <h3 style="color:black;">Report: <%= report.id %> comments </h3>
   <br>
   <% @comments = Comment.select("content", "user_id").all_comments(report) %>
   <% if @comments.length < 1 %>
   <h5 style="color:red"> This report has no comments </h5>
   <% end %>
   <br>
   <% @comments.each_with_index do |comment, i| %>
   <p style="color:Indigo"> Neighbor <%= comment.user_id %> commented </p>
   <h5 style="color:DarkBlue"><%=%> <%= comment.content %> </h5>
   <hr style="width:37%;height:1px;border-width:1px;color:gray;background-color:green">
   <br>
   <% end %>
   <a class="btn btn-primary" href="/reports/<%= report.id %>/comments/new">Add Comment</a>
   <br>


</div>

 <hr style="height:3px;border-width:1px;color:gray;background-color:DarkBlue">
 <br>
<% end %>
<br>
</body>
<br>
<br>

</html>
