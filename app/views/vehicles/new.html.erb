<%= render partial: "layouts/errors", locals: {object: @vehicle} %>
body {
  background-color:#1d1d1d !important;
}
<h1 style="color:DarkOrange;">Upload Suspect Vehicles <%="#{@user.name}"%></h1>

<h4 style="color:Blue">  click "Add Vehicles" when finished</h4><br>


<button id="upload_widget" class="cloudinary-button">Upload</button><br><br>

<script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>

<script type="text/javascript">
    var myWidget = cloudinary.createUploadWidget({
        cloudName: 'argustwo',
        upload_preset: 'vehicles',
        folder: '<%="#{@user.id}"%>',
        }, (error, result) => { if (result.event == "success") {
            console.log(result.info) // result.info contains data from upload
        } })

        document.getElementById("upload_widget").addEventListener("click", function(){
            myWidget.open();
        }, false);

</script>

  <% @vehicle = Vehicle.new %>
 <%= form_for @vehicle do |f| %>
  <%=f.submit "Add Vehicles" %>
  <% end %><br>

  <button onclick="window.location.href='/vehicles';">
     My Vehicles
   </button>
<br><br>
