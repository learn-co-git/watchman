<!-- Container for the image gallery -->
<div class="container">

  <!-- Full-width images with number text -->
  <div class="mySlides">
    <div class="numbertext"></div>
    <head>
      <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
      <title>3 Column, Right Menus</title>
      <style type="text/css">

        body{
          margin:0;
          padding:0;
          font-family: Sans-Serif;
          line-height: 1.5em;
        }

        #header {
          background: #0000A0;
          height: 150px;
        }

        #header h1 {
          margin: 0;
          padding-top: 15px;
          padding-bottom: 95px;
        }

        #mainwrapper {
          overflow: hidden;
        }

        #contentwrapper{
          float: left;
          width: 99%;
        }

        #content {
          margin-right: 305px; /* Width of '#rightmenu' and '#leftmenu' combined. */
          padding-bottom: 1001px;
          margin-bottom: -1000px;
        }

        #leftmenu {
          float: left;
          width: 275px;
          margin-left: -500px; /* Width of '#rightmenu' and '#leftmenu' combined. */
          padding-bottom: 1001px;
          margin-bottom: -1000px;
          background: #737CA1;
        }

        #rightmenu {
          float: left;
          width: 100px;
          margin-left: -210px;
          padding-bottom: 1001px;
          margin-bottom: -1000px;
          background: #646D7E;
        }

        #footer{
          clear: left;
          width: 100%;
          background: #646D7E;
          text-align: center;
          padding: 5px 0;
        }

        .innertube{
          margin: 15px; /* Padding for content */
          margin-top: 0;
        }


        p {
          color: #0C090A;
        }

        nav ul {
          list-style-type: none;
          margin: 0;
          padding: 0;
        }

        nav ul a {
          color: darkblue;
          text-decoration: none;
        }

      </style>
    </head>

    <body>
        <header id="header">
          <div class="innertube">
            <% @user = User.find_by_id(params[:id]) %>
            <% @user.reports.each do |report| %>
            <h1>Neighborhood Report <%= report.id %>:  for <%= report.address %></h1>
          </div>
        </header>
      <div id="mainwrapper">

        <div id="contentwrapper">
          <div id="content">
            <div class="innertube">
              <h2>Incident Date: <%= report.incident_date %></h2><br>
              <h4>This report is autogenerated on behalf of </h4> <h3><%= report.first_name %> <%= report.last_name %>. </h3><br>
              <h4> Crime Summary: </h4><br>
            <p><%= report.summary %> </div>
          </div>
        </div>

        <nav id="rightmenu">
          <div class="innertube">
            <ul>
         <h4>
             <li> W</li>
              <li> A </li>
              <li>  T </li>
              <li> C </li>
              <li>  H </li>
              <li> M </li>
              <li>  A </li>
              <li> N </li>
            </h4>
            </ul>
          </div>
        </nav>

        <nav id="leftmenu">
          <div class="innertube">
            <h3>Suspects</h3>
            <% suspect_images = report.suspect_data.split('##') %>
            <% suspect_images.each do |pic| %>
            <% if pic != "" %>
            <ul>
              <img src=<%= pic %> alt="suspect_images" style="width:145px;height:145px;">
            </ul>
            <% end %>
            <% end %>
            <h3>Suspect Vehicles</h3>
            <% suspect_vehicles = report.vehicle_data.split('##') %>
            <% suspect_vehicles.each do |pic| %>
            <% if pic != "" %>
            <ul>
              <img src=<%= pic %> alt="suspect_vehicles" style="width:145px;height:145px;">
            </ul>
            <% end %>
            <% end %>
          </div>
        </nav>
      </div>

        <footer id="footer">
          <div class="innertube">
            <p>Neighborhood: <%= @user.neighborhood_id %>....  Email: <%= @user.email %>.... Telephone Number: <%= report.telephone_number %></p>
          </div>
        </footer>

    </body>
  </div>
  <% end %>

  <div class="mySlides">
    <% @user.vehicles.each_with_index do |pic, i| %>
    <div class="numbertext"></div>
    <%  %>
      <img src=<%= pic.url %> width="128" height="128">
  </div>
  <% end %>

  <!-- Next and previous buttons -->
  <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
  <a class="next" onclick="plusSlides(1)">&#10095;</a>


  <!-- Thumbnail images -->
  <div class="row">
    <% @user.images.each do |pic| %>
    <div class="column">
      <img class="demo cursor" src=<%= pic.url %> width="128" height="128" onclick="currentSlide(1)" alt="user image">
    </div>
    <% end %>

  </div>
</div>
