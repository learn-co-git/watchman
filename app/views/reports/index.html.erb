          <% @user = User.find_by_id(params[:id]) %>
            <% @user.reports.each do |report| %>
            <div id="mainwrapper">
            <div id="contentwrapper">
            <div id="content">
              <div class="innertube", style="color:black;">

            <h1 style="color:black;">Neighborhood Report <%= report.id %>:  for <%= report.address %></h1>

              <hr style="height:7px;border-width:100%;color:gray;background-color:black">
            <br>


        </div>
      </div>
      <div id="contentwrapper">
        <div id="content">
            <div class="innertube", style="color:black;">
              <h2>Incident Date: <%= report.incident_date %></h2><br>
              <h5>This report is autogenerated on behalf of </h5> <h3><%= report.first_name %> <%= report.last_name %>. </h3><br>

              <h5> Crime Summary: </h5>
      <hr style="width:50%;height:2px;border-width:0;color:blue;background-color:blue">

            <p><%= report.summary %> </div>
          </div>

        </div>
        <div class="innertube">
        <nav id="rightmenu">

            <ul>
         <h4 style="centered">
             <li> W</li>
             <hr style="height:3px;border-width:0;color:gray;background-color:DarkBlue">
              <li> A </li>
              <hr style="height:2px;border-width:0;color:gray;background-color:DarkBlue">
              <li>  T </li>
              <hr style="height:3px;border-width:0;color:gray;background-color:DarkBlue">
              <li> C </li>
              <hr style="height:2px;border-width:0;color:gray;background-color:DarkBlue">
              <li>  H </li>
              <hr style="height:3px;border-width:0;color:gray;background-color:DarkBlue">
              <li> M </li>
              <hr style="height:2px;border-width:0;color:gray;background-color:DarkBlue">
              <li>  A </li>
              <hr style="height:3px;border-width:0;color:gray;background-color:DarkBlue">
              <li> N </li>
            </h4>
            </ul>
          </div>
        </nav>

        <nav id="leftmenu">
          <div class="innertube">
            <h3>Suspects</h3>

            <hr style="height:4px;border-width:0;color:gray;background-color:DarkBlue">
            <% suspect_images = report.suspect_data.split('##') %>
            <% suspect_images.each do |pic| %>
            <% if pic != "" %>
            <ul>
              <img src=<%= pic %> alt="suspect_images" style="width:145px;height:145px;">
            </ul>
            <% end %>
            <% end %>
            <br>
            <h3>Suspect Vehicles</h3>
            <hr style="height:5px;border-width:0;color:gray;background-color:DarkBlue">
            <% suspect_vehicles = report.vehicle_data.split('##') %>
            <% suspect_vehicles.each do |pic| %>
            <% if pic != "" %>
            <ul>
              <img src=<%= pic %> alt="suspect_vehicles" style="width:145px;height:145px;">
            </ul>
            <% end %>
            <% end %>

          </div>
        </nav>
      </div>
      </div>





        <footer id="footer">
          <hr style="height:7px;border-width:0;color:gray;background-color:gray">
          <div class="innertube">
            <p>Neighborhood: <%= @user.neighborhood_id %>....  Email: <%= @user.email %>.... Telephone Number: <%= report.telephone_number %></p>
            </div>

          <hr style="height:7px;border-width:0;color:gray;background-color:gray">
        </footer>
        <br>
        <br>
        <% end %>
        <br>
        <br>
