     #footer{
       clear: left;
       width: 100%;
       background: #646D7E;
       text-align: center;
       padding: 5px 0;
     }

     .innertube{
       margin: 15px; /* Padding for content */
       margin-top: 0;
     }


     p {
       color: #0C090A;
     }

     nav ul {
       list-style-type: none;
       margin: 0;
       padding: 0;
     }

     nav ul a {
       color: darkblue;
       text-decoration: none;
     }

   </style>
 </head>

