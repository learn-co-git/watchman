
<% %>
<!DOCTYPE html>
<html>
 <head>
   <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
   <title>3 Column, Right Menus</title>
   <style type="text/css">

     h4 {text-align: center;}

     body{
       background-color:#1d1d1d !important;
       color #00060f;
       margin:0;
       padding:5px;
       font-family: Sans-Serif;
       line-height: 1.5em;
     }

     #header {

       background: #0000A0;
       height: 3px;
     }

     #header h1 {

       margin: 0;
       padding-top: 15px;
       padding-bottom: 75px;

     }

     #mainwrapper {
       overflow: hidden;
     }

     #contentwrapper{
       float: left;
       width: 99%;
       overflow: hidden;
     }

     #content {
       margin-right: 305px; /* Width of '#rightmenu' and '#leftmenu' combined. */
       padding-bottom: 10px;
       margin-bottom: 90px;
       overflow: hidden;
     }

     #leftmenu {
       float: left;
       width: 275px;
       margin-left: -500px; /* Width of '#rightmenu' and '#leftmenu' combined. */
       padding-bottom: 25px;
       margin-bottom: 100px;
       background: #737CA1;
       overflow: hidden;
     }

     #rightmenu {
       float: left;
       width: 100px;
       margin-left: -210px;
       padding-bottom: 91px;
       margin-bottom: 95px;
       background: #646D7E;
       overflow: hidden;
     }

     #footer{
       clear: left;
       width: 100%;
       background: #646D7E;
       text-align: center;
       padding: 5px;
       overflow: hidden;
     }

     .innertube{
       color #00060f;
       margin: 25px; /* Padding for content */
       margin-top: 5px;
       margin-bottom: 35px;
       overflow: hidden;
     }


     p {
       color: #00060f;
     }

     nav ul {
       list-style-type: none;
       margin: 0;
       padding: 0;
       overflow: hidden;
     }

     nav ul a {

       text-decoration: none;
       overflow: hidden;
     }

   </style>
 </head>

 <body>
     <header id="header">
       <div class="innertube">
         <% @report = Report.find_by_id(params["id"]) %>
         <% @user = current_user %>
         <h1>Neighborhood Report <%= @user.reports.length %>:  for <%= @report.address %></h1>
       </div>
     </header>
   <div id="mainwrapper">

     <div id="contentwrapper">
       <div id="content">
         <div class="innertube">
           <h2>Incident Date: <%= @report.incident_date %></h2><br>
           <h4>This report is autogenerated on behalf of </h4> <h3><%= @report.first_name %> <%= @report.last_name %>. </h3><br>
           <h4> Crime Summary: </h4><br>
         <p><%= @report.summary %> </div>
       </div>
     </div>

     <nav id="rightmenu">
       <div class="innertube">
         <ul>
      <h4>
          <li> W</li>
           <li> A </li>
           <li>  T </li>
           <li> C </li>
           <li>  H </li>
           <li> M </li>
           <li>  A </li>
           <li> N </li>
         </h4>
         </ul>
       </div>
     </nav>

     <nav id="leftmenu">
       <div class="innertube">
         <h3>Suspects</h3>
         <% suspect_images = @report.suspect_data.split('##') %>
         <% suspect_images.each do |pic| %>
         <% if pic != "" %>
         <ul>
           <img src=<%= pic %> alt="suspect_images" style="width:145px;height:145px;">
         </ul>
         <% end %>
         <% end %>
         <h3>Suspect Vehicles</h3>
         <% suspect_vehicles = @report.vehicle_data.split('##') %>
         <% suspect_vehicles.each do |pic| %>
         <% if pic != "" %>
         <ul>
           <img src=<%= pic %> alt="suspect_vehicles" style="width:145px;height:145px;">
         </ul>
         <% end %>
         <% end %>
       </div>
     </nav>
   </div>
     <footer id="footer">
       <div class="innertube">
         <% @user = User.find_by_id(params[:user_id]) %>
         <p>Neighborhood: <%= @user.neighborhood_id %>....  Email: <%= @user.email %>.... Telephone Number: <%= @report.telephone_number %></p>
       </div>
     </footer>

 </body>

</html>
